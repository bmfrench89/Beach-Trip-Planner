// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TripListing {
  id        String   @id @default(cuid())
  url       String
  title     String
  price     Float
  image     String?  @default("")
  addedBy   String
  createdAt DateTime @default(now())
  votes     Vote[]
}

model Vote {
  id             String      @id @default(cuid())
  tripListingId  String
  tripListing    TripListing @relation(fields: [tripListingId], references: [id], onDelete: Cascade)
  user           String
  createdAt      DateTime    @default(now())

  @@unique([tripListingId, user])
}
